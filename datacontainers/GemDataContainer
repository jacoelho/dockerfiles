FROM debian:stable

ENV DATA_PATH /var/www/service/shared 
ENV USER rails
ENV UID 1000
ENV GROUP rails
ENV GUID 1000

RUN groupadd -g $GUID -r $GROUP && \
  useradd -u $UID -r -g $USER $GROUP && \
  mkdir -p $DATA_PATH && \
  chown -R $USER:$GROUP $DATA_PATH

VOLUME $DATA_PATH

CMD ["echo", "data container"]
